{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "handle": "filesystem",
      "src": "/static/(.*)"
    },
    {
      "handle": "filesystem",
      "src": "/assets/(.*)"
    },
    {
      "handle": "filesystem",
      "src": "/favicon.ico"
    },
    {
      "handle": "filesystem",
      "src": "/manifest.json"
    },
    {
      "handle": "filesystem",
      "src": "/logo192.png"
    },
    {
      "handle": "filesystem",
      "src": "/logo512.png"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/index.html"
    }
  ],
  "env": {
    "serverPort": "5000",
    "nodeEnvironment": "production"
  }
}